<?xml version="1.0" encoding="utf-8" ?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.sourjelly.springtest.ajax.repository.UrlRepository">
    <select id="selectUrlTable"
    resultType="com.sourjelly.springtest.ajax.domain.Url">
        SELECT
            `id`
             , `name`
             , `url`
        FROM `url`
    </select>

    <select id="isDuplicateUrl" parameterType="string"
    resultType="int">
        SELECT
            count(*)
        FROM
            `url`
        WHERE `url` = #{url}
    </select>

    <insert id="insertUrl" parameterType="map">
        INSERT INTO
        `url`
        (`name`, `url`)
        VALUE
        (
            #{name}
            , #{url}
        )
    </insert>

    <delete id="removeUrl" parameterType="int">
        DELETE FROM
                   `url`
        WHERE `id`= #{id};
    </delete>

</mapper>