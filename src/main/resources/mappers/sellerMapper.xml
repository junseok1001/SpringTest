<?xml version="1.0" encoding="utf-8" ?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="com.sourjelly.springtest.mvc.repository.SellerRepository">

    <select id="selectSellerOnRecent"
    resultType="com.sourjelly.springtest.mvc.domain.Seller">
        SELECT
            `id`
            , `nickname`
            , `temperature`
            , `profile_image`
        FROM
            `seller`
        ORDER BY
            `id` DESC
        LIMIT 1
    </select>

</mapper>